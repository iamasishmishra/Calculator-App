<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/result_tv"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="22dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#D2B3B3"
        android:textSize="34dp">

    </TextView>

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_layout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#CDAAAA"
        android:textSize="66dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/buttons_layout"
        android:background="#F2F5F8"
        android:paddingVertical="18dp"

        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="C"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_c"
                android:layout_margin="12dp"
                android:backgroundTint="#F44336">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="("
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_open_bracket"
                android:layout_margin="12dp"
                android:backgroundTint="#CDAFAF">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text=")"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_close_bracket"
                android:layout_margin="12dp"
                android:backgroundTint="#CDAFAF">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="/"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_divide"
                android:layout_margin="12dp"
                android:backgroundTint="#4CAF50">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="7"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_7"
                android:layout_margin="12dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="8"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_8"
                android:layout_margin="12dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="9"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_9"
                android:layout_margin="12dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="*"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_multiply"
                android:layout_margin="12dp"
                android:backgroundTint="#4CAF50">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="4"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_4"
                android:layout_margin="12dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="5"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_5"
                android:layout_margin="12dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="6"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_6"
                android:layout_margin="12dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="+"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_plus"
                android:layout_margin="12dp"
                android:backgroundTint="#4CAF50">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="1"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_1"
                android:layout_margin="12dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="2"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_2"
                android:layout_margin="12dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="3"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_3"
                android:layout_margin="12dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="-"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_minus"
                android:layout_margin="12dp"
                android:backgroundTint="#4CAF50">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="AC"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/button_ac"
                android:layout_margin="12dp"
                android:backgroundTint="#F44336">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="0"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_0"
                android:layout_margin="12dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="."
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_dot"
                android:layout_margin="12dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:text="="
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/button_equals"
                android:layout_margin="12dp"
                android:backgroundTint="#4CAF50">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>